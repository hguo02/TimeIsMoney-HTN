<body id="register-body" class="d-flex align-items-center">

    <div id="register-container" class="shadow w-50 p-3 container border rounded">
        <h1> Register </h1>
        <% if(typeof alert !='undefined' ) { %>
            <% alert.forEach(function(error) { %>
                <% if(error.msg !='Invalid value' ) {%>
                    <div class="alert alert-warning alert-dismissible fade show d-flex justify-content-between"
                        style="width: 100%;" role="alert">
                        <%= error.msg %>
                            <div type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                            </div>
                    </div>
                    <% } %>
                        <% }) %>
                            <% } %>

                                <form action="/register" method="POST">
                                    <div class="mb-2 form-group">
                                        <label for="name">Name</label>
                                        <input id="name" type="text" class="form-control" name="name">
                                    </div>
                                    <div class="mb-2 form-group">
                                        <label for="username">Username</label>
                                        <input id="username" type="text" class="form-control" name="username">
                                    </div>
                                    <div class="mb-2 form-group">
                                        <label for="password">Password</label>
                                        <input id="password" type="password" class="form-control" name="password">
                                    </div>
                                    <div class="mb-2 form-group">
                                        <label for="password2">Confirm Password</label>
                                        <input id="password2" type="password" class="form-control" name="password2">
                                    </div>

                                    <button type="submit" class="mt-2 btn-lg">Signup</button>
                                </form>

                                <hr>

                                <p class="text-muted">Already have an account? <a href="/login" id="prev-user">Login</a>
                                </p>
                                <p class="text-muted">Or go <a href="/">home</a>.</p>
    </div>

