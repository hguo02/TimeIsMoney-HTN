    <div class="content-group">
        <h1 class="mb-4">Log Goal Progression</h1>
        <!-- <p>Which goal did you progress in today?</p> -->

        <div class="content-container">
            <form action="/log" method="POST">
                <div class="form-group">
                    <label for="goalSelect">Which goal did you progress in today?</label>
                    <select id="goalSelect" class="form-control form-control-sm custom-select" name="goalSelect">
                        <option value="">-- Select one of your goals --</option>
                        <% userlogs.forEach(goals=> { %>
                            <option value="<%= goals.goal%>">
                                <%= goals.goal %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="form-group my-3">
                    <label for="amountSpent">How much money or time did you spend?</label>
                    <input type="text" name="amountSpent" id="amountSpent" class="form-control">
                </div>

                <button class="btn-lg">Submit</button>
            </form>
        </div>
    </div>
</body>

</html>